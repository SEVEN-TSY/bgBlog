<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seven.blog.dao.mapper.TagMapper">

    <sql id="all">id,avatar,tag_name as tagName</sql>
    <select id="findTagsByArticleId" parameterType="long" resultType="com.seven.blog.dao.pojo.Tag">
        select <include refid="all"/> from ms_tag tag where tag.id in(
            select tag_id from ms_article_tag where article_id=#{id})
    </select>
    <select id="getHotTagIds" resultType="java.lang.Long" parameterType="int">
        select tag_id from ms_article_tag group by tag_id order by count(1) desc limit #{limit}
    </select>
    <select id="findtagsByTagIds" resultType="com.seven.blog.dao.pojo.Tag" parameterType="list">
        select <include refid="all"/> from ms_tag tag where tag.id in
        <foreach collection="tagIds" item="tagId" separator="," open="(" close=")">
            #{tagId}
        </foreach>
    </select>
</mapper>
